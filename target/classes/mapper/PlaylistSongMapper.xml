<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.PlaylistSongMapper">
    <resultMap id="BaseResultMap" type="org.example.pojo.PlaylistSong">
        <id column="id" property="id"/>
        <result column="playlist_id" property="playlistId"/>
        <result column="song_id" property="songId"/>
    </resultMap>
    
    <select id="findByPlaylistId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * FROM playlist_song WHERE playlist_id = #{playlistId}
    </select>
    
    <insert id="insert" parameterType="org.example.pojo.PlaylistSong" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO playlist_song (playlist_id, song_id)
        VALUES (#{playlistId}, #{songId})
    </insert>
    
    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM playlist_song WHERE id = #{id}
    </delete>
    
    <delete id="deleteByPlaylistIdAndSongId">
        DELETE FROM playlist_song WHERE playlist_id = #{playlistId} AND song_id = #{songId}
    </delete>
</mapper> 