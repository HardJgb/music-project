<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.PlaylistMapper">
    <resultMap id="BaseResultMap" type="org.example.pojo.Playlist">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="cover_img" property="coverImg"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="play_count" property="playCount"/>
        <result column="is_recommend" property="isRecommend"/>
        <result column="category" property="category"/>
    </resultMap>
    
    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM playlist
    </select>
    
    <select id="findRecommendedPlaylists" resultMap="BaseResultMap">
        SELECT * FROM playlist WHERE is_recommend = 1
    </select>
    
    <select id="findById" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        SELECT * FROM playlist WHERE id = #{id}
    </select>
    
    <select id="findByCategory" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT * FROM playlist WHERE category = #{category}
    </select>
    
    <select id="findAllCategories" resultType="java.lang.String">
        SELECT DISTINCT category FROM playlist WHERE category IS NOT NULL
    </select>
    
    <insert id="insert" parameterType="org.example.pojo.Playlist" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO playlist (name, cover_img, description, play_count, is_recommend, category)
        VALUES (#{name}, #{coverImg}, #{description}, #{playCount}, #{isRecommend}, #{category})
    </insert>
    
    <update id="update" parameterType="org.example.pojo.Playlist">
        UPDATE playlist 
        SET name = #{name}, 
            cover_img = #{coverImg}, 
            description = #{description}, 
            play_count = #{playCount}, 
            is_recommend = #{isRecommend},
            category = #{category},
            update_time = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>
    
    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM playlist WHERE id = #{id}
    </delete>
</mapper> 